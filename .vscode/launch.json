{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Launch Web Host",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build API",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/src/StripeEventsCheckout.WebHost/bin/Debug/net6.0/StripeEventsCheckout.WebHost.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/StripeEventsCheckout.WebHost",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Launch CLI Tools",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build Tools",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/src/StripeEventsCheckout.Tools/bin/Debug/net6.0/dotnet-striped.dll",
            "args": ["status"],
            "cwd": "${workspaceFolder}/src/StripeEventsCheckout.Tools",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}